# ===========================================
# CONFIGURATION BACKEND - Badge Ketaka
# ===========================================

# Configuration du serveur
NODE_ENV=production
PORT=3000

# Configuration PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gestion_badges
DB_USER=postgres
DB_PASSWORD=changez_moi_en_production

# Configuration JWT
# Générez un secret fort avec: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=changez_moi_par_un_secret_tres_long_et_complexe_minimum_64_caracteres
JWT_EXPIRES_IN=7d

# Configuration Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Seuil de stock faible
LOW_STOCK_THRESHOLD=1

# CORS Origins (en production, spécifiez vos domaines)
ALLOWED_ORIGINS=http://localhost:8100,https://votre-domaine.com